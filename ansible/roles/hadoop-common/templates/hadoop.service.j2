[Unit]
Description=Apache Hadoop ({{ service }})
After=network.target
After=systemd-user-sessions.service
After=network-online.target

[Service]
User={{ hadoop_user_name }}
Type=forking
{% if service == "namenode" %}
ExecStartPre={{ hadoop_home }}/bin/hdfs {{ service }} -format
ExecStart={{ hadoop_home }}/sbin/hadoop-daemon.sh --config $HADOOP_CONF_DIR --script hdfs start {{ service }}
{% else %}
ExecStart={{ hadoop_home }}/sbin/hadoop-daemon.sh --config $HADOOP_CONF_DIR --script hdfs start {{ service }}
{% endif %}
ExecStop={{ hadoop_home }}/sbin/hadoop-daemon.sh --config $HADOOP_CONF_DIR --script hdfs stop {{ service }}
TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
