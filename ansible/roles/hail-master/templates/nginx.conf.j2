server {
  server_name {{ extra_user_data['spark_master_external_address'] }};
  client_max_body_size 0;

  location {{ notebook_app_base_url }}/ {
    proxy_pass            http://localhost:8888/{{ notebook_app_base_url }}/;
    proxy_set_header      Host $host;
    proxy_set_header      X-Real-IP $remote_addr;
    proxy_set_header      X-Forwarded-For $proxy_add_x_forwarded_for;
    # WebSocket support
    proxy_http_version    1.1;
    proxy_set_header      Upgrade "websocket";
    proxy_set_header      Connection "Upgrade";
    proxy_read_timeout    86400;

  }

  location /spark/ {
    proxy_pass            http://localhost:8080/;
    proxy_set_header      Accept-Encoding "";
    proxy_set_header      Host $host;
    proxy_set_header      X-Real-IP $remote_addr;
    proxy_set_header      X-Forwarded-For $proxy_add_x_forwarded_for;

    sub_filter_types "*";
    sub_filter_once  off;
    sub_filter       'src="/'   'src="/spark/';
    sub_filter       'href="/'  'href="/spark/';
    sub_filter       'src="app'      'src="/spark/app/';
    sub_filter       'href="app'     'href="/spark/app/';
  }

  location / {
    rewrite ^/$ {{ notebook_app_base_url }}/ redirect;
  }

}

